apiVersion: apps/v1
kind: Deployment
metadata:
  name: cloudsurge-web
spec:
  replicas: 3
  selector:
    matchLabels:
      app: cloudsurge-web
  template:
    metadata:
      labels:
        app: cloudsurge-web
    spec:
      containers:
        - name: cloudsurge-web
          image: cloudsurge-web:latest
          ports:
            - containerPort: 3000


---
apiVersion:
kind: Service
metadata:
  name: cloudsurge-service
spec:
  selector:
    app: cloudsurge-web
  ports:
    - protocol: TCP
      port: 80
      targetPort: 3000
  type: LoadBalancer